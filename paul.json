{
    "title": "Swap Ctrl+Tab with Alt+Tab (Windows Keyboard)",
    "rules": [
      {
        "description": "Swap instances of Ctrl+Tab with Alt+Tab",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "tab",
              "modifiers": {
                "mandatory": ["left_alt"]
              }
            },
            "to": [
              {
                "key_code": "tab",
                "modifiers": ["left_control"]
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "tab",
              "modifiers": {
                "mandatory": ["left_control"]
              }
            },
            "to": [
              {
                "key_code": "tab",
                "modifiers": ["left_alt"]
              }
            ]
          }
        ]
      },
      {
        "description": "Swap instances of Ctrl+Shift+Tab with Alt+Shift+Tab",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "tab",
              "modifiers": {
                "mandatory": ["left_alt", "left_shift"]
              }
            },
            "to": [
              {
                "key_code": "tab",
                "modifiers": ["left_control", "left_shift"]
              }
            ]
          },
          {
              "type": "basic",
              "from": {
              "key_code": "tab",
              "modifiers": {
                  "mandatory": ["left_control", "left_shift"]
              }
              },
              "to": [
              {
                  "key_code": "tab",
                  "modifiers": ["left_alt", "left_shift"]
              }
              ]
          }
        ]
      }
    ]
  }
  